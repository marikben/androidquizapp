        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
    <ListView
        android:id="@+id/paatos"
        android:text=""
        android:textColor="#ff8c94"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
        <Button
            android:id="@+id/random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="470dp"
            android:layout_marginLeft="70dp"
            android:background="#ffd3b5"
            android:textColor="#ff8c94"
            android:text="Randomoi"/>
    <Button
    android:id="@+id/alkuun"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="470dp"
    android:layout_marginLeft="250dp"
        android:background="#ff8c94"
        android:textColor="#ffd3b5"
    android:text="Aloita alusta"/>

    </RelativeLayout>

</LinearLayout>